<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme"
            android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_inner" />

        <LinearLayout
            android:id="@+id/all_top_frm"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:id="@+id/add_item_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:alpha="0.55"
                android:background="@drawable/button_gradient"
                android:paddingVertical="@dimen/_10sdp"
                android:text="@string/add_item"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_phar_frm"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--editing-->
                    <LinearLayout
                        android:id="@+id/item_edit_frm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorTextColor="@color/secondary_peach"
                            android:textColorHint="@color/text_black"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundColor="@color/theme_bg"
                            app:boxStrokeColor="@color/black"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusTopStart="@dimen/_8sdp"
                            app:counterTextColor="@color/text_black"
                            app:hintTextColor="@color/text_black"
                            >

                            <EditText
                                android:id="@+id/p_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:hint="Enter Item Name"
                                android:textSize="@dimen/_9ssp"
                                android:textColorHighlight="@color/text_black"
                                android:textColor="@color/text_black"
                                android:textColorHint="@color/text_black"
                                android:importantForAutofill="no" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:gravity="center|center_vertical"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            android:background="@drawable/custom_spinner_background"
                            >
                            <Spinner
                                android:id="@+id/et_brand"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:overlapAnchor="false"
                                android:prompt="@string/enter_brand"
                                android:padding="@dimen/_10sdp"
                                android:backgroundTint="@color/app_theme_icon"
                                android:popupBackground="@color/white"
                                android:spinnerMode="dropdown" />

                            <LinearLayout
                                android:id="@+id/im_edit"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:orientation="vertical"
                                android:gravity="center|center_vertical"
                                android:layout_gravity="center"
                                android:background="@drawable/button_add"
                                >
                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/ic_plus"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:contentDescription="@string/app_name" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            android:background="@drawable/custom_spinner_background"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <Spinner
                                android:id="@+id/et_categroy"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/app_theme_icon"
                                android:overlapAnchor="false"
                                android:padding="@dimen/_10sdp"
                                android:prompt="@string/enter_cat"
                                android:popupBackground="@color/white"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="1"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            android:layout_gravity="center"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:gravity="center|center_vertical"
                                android:layout_gravity="center">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:errorTextColor="@color/secondary_red"
                                    android:textColorHint="@color/text_black"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    app:boxStrokeWidth="1dp"
                                    app:boxBackgroundColor="@color/theme_bg"
                                    app:boxStrokeColor="@color/black"
                                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                    app:counterTextColor="@color/text_black"
                                    app:hintTextColor="@color/text_black"
                                    >

                                    <EditText
                                        android:id="@+id/et_rate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:imeOptions="actionNext"
                                        android:inputType="numberDecimal"
                                        android:hint="Enter mrp"
                                        android:textSize="@dimen/_9ssp"
                                        android:textColorHighlight="@color/text_black"
                                        android:textColor="@color/text_black"
                                        android:textColorHint="@color/text_black"
                                        android:importantForAutofill="no" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:errorTextColor="@color/secondary_red"
                                    android:textColorHint="@color/text_black"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    app:boxStrokeWidth="1dp"
                                    app:boxBackgroundColor="@color/theme_bg"
                                    app:boxStrokeColor="@color/black"
                                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                                    app:counterTextColor="@color/text_black"
                                    app:hintTextColor="@color/text_black"
                                    >

                                    <EditText
                                        android:id="@+id/et_offer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:imeOptions="actionNext"
                                        android:inputType="numberDecimal"
                                        android:textSize="@dimen/_9ssp"
                                        android:hint="Enter discount"
                                        android:textColorHighlight="@color/text_black"
                                        android:textColor="@color/text_black"
                                        android:textColorHint="@color/text_black"
                                        android:importantForAutofill="no" />

                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/tv_cancel"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/cancel"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:background="@drawable/button_cancel"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/tv_update"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/update"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:background="@drawable/button_update"/>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/cart_frm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/sub_ttl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/subttl"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textDirection="ltr"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_18sdp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:alpha="0.55"
                    android:background="@drawable/button_gradient"
                    android:enabled="false"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/contpay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    app:layout_constraintTop_toBottomOf="@id/mobile" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/top_pic_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/ld_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/primary_peach"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_option_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/proceed_btn"
            app:layout_constraintTop_toBottomOf="@id/all_top_frm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.airbnb.lottie.LottieAnimationView
            android:visibility="gone"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:id="@+id/nodata"
            app:lottie_rawRes="@raw/ic_nodata"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:padding="@dimen/_14sdp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/all_top_frm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/proceed_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/button_gradient"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/CartQtyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="2dp"
                android:drawablePadding="@dimen/_2ssp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_cart" />

            <TextView
                android:id="@+id/CartproceedTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contpay"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@id/mobile" />
            <TextView
                android:id="@+id/CartAmountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textDirection="ltr"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>