<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_8ssp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pharm_frm"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/button_theme_ix"
        android:layout_gravity="center"
        android:padding="8dp">
    <RelativeLayout
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp">

        <ImageView
            android:id="@+id/im_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo" />


        <LinearLayout
            android:id="@+id/linearkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_top_corners">

            <TextView
                android:id="@+id/item_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#efefef"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="2.5 km"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/translucent"
            >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_5ssp"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5ssp"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/white_x"
                android:paddingBottom="@dimen/_5ssp"
                />

        </LinearLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>