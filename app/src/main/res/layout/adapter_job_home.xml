<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_8ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:id="@+id/menu_frm"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginVertical="@dimen/_18sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#B6E3DC"
        android:layout_gravity="center"
        android:padding="8dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"

            >
        <TextView
            android:id="@+id/job_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:layout_gravity="center|center_vertical"
            android:text="Sr.Pharmacist"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_black_m"
            android:textStyle="bold"
            />
            <TextView
                android:id="@+id/job_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:layout_gravity="center|center_vertical"
                android:text="Mazoon Pharmacy, Oman Commercial Center"
                android:textSize="@dimen/_6ssp"
                android:textColor="@color/text_black_m"
                android:textStyle="bold"
                />

        <TextView
            android:id="@+id/job_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:layout_gravity="center|center_vertical"
            android:text="Oman"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/app_theme_icon"
            android:textStyle="bold"
            />
            <TextView
                android:id="@+id/job_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:layout_gravity="center|center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/rps"
                android:textSize="@dimen/_7ssp"
                android:textColor="@color/theme_text"
                android:textStyle="bold"
                android:textDirection="ltr"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@color/theme_round"

            >

            <TextView
                android:id="@+id/job_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:layout_gravity="center|center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="Posted 06 Mar 2024"
                android:textSize="@dimen/_7ssp"
                android:textColor="@color/theme_text"
                android:textStyle="bold"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>