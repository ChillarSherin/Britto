<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/activity_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="@dimen/_50sdp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="50dp"/>

        <ScrollView
            android:id="@+id/scrolView_account"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar"

            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/linear_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/floatingActionButton"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/jobpost" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            app:errorTextColor="@color/secondary_peach"
                            android:textColorHint="@color/text_black"
                            android:layout_marginBottom="@dimen/_3sdp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundColor="@color/theme_bg"
                            app:boxStrokeColor="@color/select"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusTopStart="@dimen/_8sdp"
                            app:counterTextColor="@color/text_black"
                            app:hintTextColor="@color/text_black"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/job_title_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/job_title"
                                android:inputType="textCapSentences"
                                android:paddingVertical="@dimen/_11sdp"
                                android:textSize="@dimen/_12ssp"
                                android:maxLength="10"
                                android:imeOptions="actionDone"
                                tools:ignore="RtlSymmetry" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorTextColor="@color/secondary_peach"
                            android:textColorHint="@color/text_black"
                            android:layout_marginBottom="@dimen/_8sdp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundColor="@color/theme_bg"
                            app:boxStrokeColor="@color/select"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusTopStart="@dimen/_8sdp"
                            app:counterTextColor="@color/text_black"
                            app:hintTextColor="@color/text_black">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/job_type_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/job_type"
                                android:inputType="textCapSentences"
                                android:paddingVertical="@dimen/_11sdp"
                                android:textSize="@dimen/_12ssp"
                                android:maxLength="10"
                                android:imeOptions="actionDone"
                                tools:ignore="RtlSymmetry" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorTextColor="@color/secondary_peach"
                            android:textColorHint="@color/text_black"
                            android:layout_marginBottom="@dimen/_8sdp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundColor="@color/theme_bg"
                            app:boxStrokeColor="@color/select"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusTopStart="@dimen/_8sdp"
                            app:counterTextColor="@color/text_black"
                            app:hintTextColor="@color/text_black">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/job_salary_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/salary"
                                android:inputType="textCapSentences"
                                android:paddingVertical="@dimen/_11sdp"
                                android:textSize="@dimen/_12ssp"
                                android:maxLength="10"
                                android:imeOptions="actionDone"
                                tools:ignore="RtlSymmetry" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorTextColor="@color/secondary_peach"
                            android:textColorHint="@color/text_black"
                            android:layout_marginBottom="@dimen/_8sdp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundColor="@color/theme_bg"
                            app:boxStrokeColor="@color/select"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusTopStart="@dimen/_8sdp"
                            app:counterTextColor="@color/text_black"
                            app:hintTextColor="@color/text_black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/job_exp_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/exp"
                                android:inputType="textCapSentences"
                                android:paddingVertical="@dimen/_11sdp"
                                android:textSize="@dimen/_12ssp"
                                android:maxLength="10"
                                android:imeOptions="actionDone"
                                tools:ignore="RtlSymmetry" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            app:errorTextColor="@color/secondary_peach"
                            android:textColorHint="@color/text_black"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundColor="@color/theme_bg"
                            app:boxStrokeColor="@color/select"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusTopStart="@dimen/_8sdp"
                            app:counterTextColor="@color/text_black"
                            app:hintTextColor="@color/text_black">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/job_desc_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/job_desc"
                                android:inputType="textCapSentences"
                                android:paddingVertical="@dimen/_11sdp"
                                android:textSize="@dimen/_12ssp"
                                android:maxLength="10"
                                android:imeOptions="actionDone"
                                tools:ignore="RtlSymmetry" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            app:errorTextColor="@color/secondary_peach"
                            android:textColorHint="@color/text_black"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundColor="@color/theme_bg"
                            app:boxStrokeColor="@color/select"
                            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                            app:boxCornerRadiusTopStart="@dimen/_8sdp"
                            app:counterTextColor="@color/text_black"
                            app:hintTextColor="@color/text_black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/job_feature_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/job_feature"
                                android:inputType="textCapSentences"
                                android:paddingVertical="@dimen/_11sdp"
                                android:textSize="@dimen/_12ssp"
                                android:maxLength="10"
                                android:imeOptions="actionDone"
                                tools:ignore="RtlSymmetry" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/confirm_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:alpha="0.55"
                            android:background="@drawable/button_gradient"
                            android:enabled="false"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/contin"
                            android:textAllCaps="true"
                            android:textColor="@color/primary_blue"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            app:backgroundTint="@null"/>

                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/otp_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/primary_peach"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/confirm_btn"
                        app:layout_constraintEnd_toEndOf="@id/confirm_btn"
                        app:layout_constraintStart_toStartOf="@id/confirm_btn"
                        app:layout_constraintTop_toTopOf="@id/confirm_btn" />

                </LinearLayout>



            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>