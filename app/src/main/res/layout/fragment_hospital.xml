                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="201-500 employees"
                                  android:textSize="@dimen/_10ssp"
                                  android:layout_marginEnd="16dp"/>

                          </LinearLayout>
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
