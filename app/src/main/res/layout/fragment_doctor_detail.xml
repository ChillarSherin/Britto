<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:gravity="center"
            android:background="@drawable/ic_top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.8">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/toolbar_back"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white"
                            android:contentDescription="@string/app_name" />
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_logo"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:contentDescription="TODO"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_15ssp"
                        android:text="Al Hayat International Hospital"
                        android:textColor="@color/white"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_16ssp"
                        android:layout_marginEnd="@dimen/_10ssp"
                        android:text="Ali Shaihani Complex, Al Ghubra Roundabout, Muscat 131, Oman"
                        android:textColor="@color/white"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="normal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_call_white"
                        android:layout_gravity="center"
                        android:contentDescription="TODO"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="start"
                android:background="@color/theme"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:background="@color/theme"
                    android:scrollbars="none">

                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    >
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:weightSum="1"
                          android:layout_margin="@dimen/_5ssp">
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="0.3"
                              android:gravity="center"
                              android:layout_margin="2dp">

                              <ImageView
                                  android:id="@+id/im_pic"
                                  android:layout_width="wrap_content"
                                  android:layout_height="@dimen/_70sdp"
                                  android:src="@drawable/ic_launcher_background"
                                  android:layout_gravity="center"
                                  android:scaleType="fitXY"
                                  android:contentDescription="TODO"
                                  tools:ignore="MissingConstraints" />



                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="0.7"
                              android:orientation="vertical"
                              android:layout_marginStart="@dimen/_8sdp"
                              android:gravity="center|center_vertical"
                              android:layout_gravity="center">

                              <LinearLayout
                                  android:id="@+id/cartItem"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="start"
                                  android:orientation="vertical">

                                  <TextView
                                      android:id="@+id/tvSpecialization"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Cardiology"
                                      android:textSize="@dimen/_9ssp"
                                      android:layout_marginBottom="8dp"/>

                                  <TextView
                                      android:id="@+id/tvMainName"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Dr. Alexa Irene"
                                      android:textSize="@dimen/_12ssp"
                                      android:textStyle="bold"/>

                                  <TextView
                                      android:id="@+id/tvTitle"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="MBBS, MD, DM, FSCAI, FESC, FACC, FSCAI"
                                      android:textSize="@dimen/_10ssp"/>

                                  <TextView
                                      android:id="@+id/tvRegistrationStatus"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Medical Registration Verified"
                                      android:textSize="@dimen/_10ssp"
                                      android:textColor="@android:color/holo_green_dark"/>

                                  <TextView
                                      android:id="@+id/tvConsultationFee"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="₹700 Consultation fee at clinic"
                                      android:textSize="@dimen/_10ssp"
                                      android:textColor="@android:color/holo_red_dark"
                                      android:layout_marginTop="8dp"/>

                                  <TextView
                                      android:id="@+id/tvWorkingHours"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Working hours: 8.00pm to 9.00am"
                                      android:textSize="@dimen/_10ssp"
                                      android:layout_marginTop="8dp"/>


                              </LinearLayout>

                          </LinearLayout>
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_gravity="center">
                          <TextView
                              android:id="@+id/lst_note"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:text="Friday &amp; Sunday Holiday"
                              android:textStyle="bold"
                              android:textSize="@dimen/_12ssp"
                              android:textColor="@color/primary_red" />

                      </LinearLayout>

                      <TextView
                          android:id="@+id/tvAboutUsHeading"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="About Us"
                          android:textSize="@dimen/_11ssp"
                          android:textStyle="bold"
                          android:gravity="center_vertical"
                          android:layout_marginTop="@dimen/_8sdp"
                          android:layout_marginBottom="8dp" />

                      <TextView
                          android:id="@+id/tvAboutUsMessage"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/_10ssp"
                          android:gravity="start"
                          android:lineSpacingExtra="4dp"
                          android:layout_marginBottom="16dp" />

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/_120sdp"
                          android:src="@drawable/im_map"
                          android:layout_gravity="center"
                          android:scaleType="fitXY"
                          android:contentDescription="TODO"
                          tools:ignore="MissingConstraints" />


                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:background="@drawable/button_gradient"
                          android:padding="@dimen/_5sdp"
                          android:layout_marginTop="@dimen/_20sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/_10ssp"
                              android:gravity="center|center_vertical"
                              android:text="@string/book_doc"
                              android:textColor="@color/white"
                              android:textStyle="bold"
                              android:lineSpacingExtra="4dp" />
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/_7ssp"
                              android:gravity="center|center_vertical"
                              android:text="@string/book_doc"
                              android:textColor="@color/white"
                              android:lineSpacingExtra="4dp"/>
                      </LinearLayout>
                  </LinearLayout>

                </ScrollView>

            </LinearLayout>

