<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:id="@+id/root_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   tools:ignore="MissingConstraints">

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/pharm_frm"
                       app:cardCornerRadius="10dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/theme_bg"
                       android:layout_gravity="center"
                       android:padding="8dp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_marginVertical="@dimen/_10sdp"
                           android:layout_marginHorizontal="@dimen/_10sdp">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:padding="8dp"
                               android:text="Add New "
                               android:textStyle="bold"/>

                           <Spinner
                               android:id="@+id/daySpinner"
                               style="@style/mySpinnerItemSelectedStyle"
                               android:layout_width="match_parent"
                               android:layout_height="@dimen/_30sdp"
                               android:overlapAnchor="false"
                               android:spinnerMode="dropdown"
                               android:background="@android:drawable/btn_dropdown"
                               />

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:weightSum="1"
                               android:layout_marginTop="@dimen/_10sdp"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintTop_toBottomOf="@id/title"
                               tools:ignore="MissingConstraints"
                               android:baselineAligned="false">

                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="0.25"
                                   android:background="@drawable/bg_border_btn"

                                   android:gravity="center">
                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"

                                       android:gravity="center"
                                       android:padding="8dp"
                                       android:text="9.30" />
                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="0.1"
                                   android:layout_gravity="center"
                                   android:orientation="horizontal" >
                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:padding="8dp"
                                       android:text="-"
                                       android:gravity="center"/>
                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="0.25"
                                   android:background="@drawable/bg_border_btn"
                                   android:gravity="center">

                                   <TextView
                                       android:gravity="center"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:padding="8dp"
                                       android:text="11.30 " />
                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="match_parent"
                                   android:layout_weight="0.4"
                                   android:layout_gravity="center"
                                   android:orientation="horizontal"
                                   android:layout_marginStart="@dimen/_10sdp"
                                   android:background="@drawable/bg_border_btn"
                                   >
                                   <Spinner
                                       android:id="@+id/sessionSpinner"
                                       style="@style/mySpinnerItemSelectedStyle"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:overlapAnchor="false"
                                       android:spinnerMode="dropdown" />
                               </LinearLayout>

                           </LinearLayout>
                           <TextView
                               android:gravity="center"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:padding="8dp"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:text="Add"
                               android:textColor="@color/white"
                               android:background="@drawable/button_cancel"/>
                       </LinearLayout>
                   </androidx.cardview.widget.CardView>


                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/recycler"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:clipToPadding="false"
                       android:paddingTop="@dimen/_10sdp"
                       android:paddingBottom="@dimen/_25sdp"/>

                   <com.google.android.material.button.MaterialButton
                       android:id="@+id/confirm_btn"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="@dimen/_18sdp"
                       android:layout_marginTop="@dimen/_25sdp"
                       android:layout_marginBottom="@dimen/_12sdp"
                       android:alpha="0.55"
                       android:background="@drawable/button_gradient"
                       android:enabled="false"
                       android:paddingVertical="@dimen/_10sdp"
                       android:text="@string/contin"
                       android:textAllCaps="false"
                       android:textColor="@color/primary_blue"
                       android:textSize="@dimen/_12ssp"
                       android:textStyle="bold"
                       app:backgroundTint="@null"
                       app:layout_constraintTop_toBottomOf="@+id/hours_frm"/>

               </LinearLayout>

                <ProgressBar
                    android:id="@+id/otp_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/primary_peach"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bottom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </LinearLayout>
</layout>