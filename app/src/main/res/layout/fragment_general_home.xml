<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:background="@drawable/ic_top"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/ic_logo"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:contentDescription="TODO"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:text="Welcome to BHC,"
                    android:textColor="@color/white"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/_5ssp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/_5sdp"
                android:gravity="start">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/general_head"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:layout_marginVertical="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:id="@+id/phar_frm"
                            android:layout_marginHorizontal="@dimen/_18sdp"
                            android:layout_marginVertical="@dimen/_18sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/button_theme_ix"
                            android:layout_gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|center_vertical"
                                android:layout_gravity="center|center_vertical"
                                android:drawableTop="@drawable/ic_menu_one"
                                android:layout_margin="@dimen/_8ssp"
                                android:textSize="@dimen/_13ssp"
                                android:text="Pharmacy"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:id="@+id/hospi_frm"
                            android:layout_marginHorizontal="@dimen/_18sdp"
                            android:layout_marginVertical="@dimen/_18sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|center_vertical"
                                android:layout_gravity="center|center_vertical"
                                android:drawableTop="@drawable/ic_menu_two"
                                android:layout_margin="@dimen/_8ssp"
                                android:textSize="@dimen/_13ssp"
                                android:text="Hospital"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:id="@+id/doc_frm"
                            android:layout_marginHorizontal="@dimen/_18sdp"
                            android:layout_marginVertical="@dimen/_18sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|center_vertical"
                                android:layout_gravity="center|center_vertical"
                                android:drawableTop="@drawable/ic_menu_one"
                                android:layout_margin="@dimen/_8ssp"
                                android:textSize="@dimen/_13ssp"
                                android:text="Doctor"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:id="@+id/lab_frm"
                            android:layout_marginHorizontal="@dimen/_18sdp"
                            android:layout_marginVertical="@dimen/_18sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/button_theme_jx"
                            android:layout_gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|center_vertical"
                                android:layout_gravity="center|center_vertical"
                                android:drawableTop="@drawable/ic_menu_two"
                                android:layout_margin="@dimen/_8ssp"
                                android:textSize="@dimen/_13ssp"
                                android:text="Lab"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="bold"
                    android:gravity="bottom"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:text="@string/type_alert_message"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_5ssp"
                    android:layout_gravity="bottom"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:orientation="vertical"
                android:background="@drawable/ic_footer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/compy"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</layout>